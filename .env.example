# API Load Test Environment Variables
# Copy this file to .env and update with your actual values

# ========================
# Environment Configuration
# ========================

# Which environment to test: dev, staging, production
ENVIRONMENT=dev

# ========================
# API Configuration
# ========================

# Configure base URLs in config/env.js
# Example:
# DEV_BASE_URL=http://localhost:5000
# STAGING_BASE_URL=https://staging-api.example.com
# PRODUCTION_BASE_URL=https://api.example.com

# ========================
# Authentication
# ========================

# Configure test user credentials in config/env.js
# Example:
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=your_secure_password
# USER_USERNAME=testuser
# USER_PASSWORD=test_password

# ========================
# k6 Cloud (Optional)
# ========================

# For cloud-based test execution
# Get your token from: https://app.k6.io/account/api-token
# K6_CLOUD_TOKEN=your_k6_cloud_token_here

# ========================
# Metrics Export (Optional)
# ========================

# InfluxDB - Time-series database for metrics
# INFLUXDB_URL=http://localhost:8086
# INFLUXDB_DB=k6metrics
# INFLUXDB_USERNAME=admin
# INFLUXDB_PASSWORD=admin

# Prometheus
# PROMETHEUS_URL=http://localhost:9090

# Grafana
# GRAFANA_URL=http://localhost:3000

# ========================
# Test Configuration (Optional)
# ========================

# Override default test parameters
# MAX_VUS=100
# TEST_DURATION=10m
# ITERATIONS=1000
# REQUEST_TIMEOUT=30s

# ========================
# Debugging
# ========================

# Set to 'true' to enable verbose logging
# DEBUG=false

# ========================
# Reports
# ========================

# Directory for test reports
# REPORTS_DIR=./reports

# Report format: json, html, xml
# REPORT_FORMAT=json
